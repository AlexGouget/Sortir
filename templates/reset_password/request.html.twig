{% extends 'base.html.twig' %}

{% block title %}mot de passe oublié{% endblock %}

{% block body %}

    <div class="header-mini">
        <header class="header flex flex-column justify-content-center align-items-center">
            {% for flash_error in app.flashes('reset_password_error') %}
                <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
            {% endfor %}
            <h1>Mot de passe oublié ?</h1>

            {{ form_start(requestForm) }}
            {{ form_row(requestForm.email,{'attr': {'class': 'form-control vw30'}}) }}
            <div>
                <small>

                </small>
            </div>

            <button class="btn btn-primary">Réinitialiser le mot de passe</button>
            {{ form_end(requestForm) }}
        </header>
    </div>

{% endblock %}
